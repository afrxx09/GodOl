<% provide(:title, 'Användare') %>
<div class="c12">

	<h1><%= yield(:title) %></h1>
	
	<div id="user-list" class="small-list gray">
	
		<div class="row header">
			<div class="col id">Id</div>
			<div class="col level">Level</div>
			<div class="col name">Namn</div>
			<div class="col email">E.post</div>
			<div class="col level">Byt nivå</div>
			<div class="col delete">Ta bort</div>
		</div>
		
		<% @users.each do |user| %>
		<div class="row">
			<div class="col id"><%= user.id %></div>
			<div class="col level">
				<% if user.admin %>
					<%= 'Admin' %>
				<% else %>
					<%= 'Användare' %>
				<% end %>
			</div>
			<div class="col name"><%= user.name %></div>
			<div class="col email"><%= user.email %></div>
			<div class="col level">
				<% if user.admin %>
					<%= link_to 'Gör till Användare', toggle_admin_path(user) %>
				<% else %>
					<%= link_to 'Gör till Admin', toggle_admin_path(user) %>
					
				<% end %>
			</div>
			<div class="col delete"><%= link_to "Ta bort", user_path(user) , method: :delete %></div>
		</div>
		<% end %>
		
	</div>
</div>