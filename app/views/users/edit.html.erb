<% provide(:title, 'Redigera kontouppgifter') %>
<div class="c6">
	<h1><%= yield(:title) %></h1>

	<%= form_for(@user) do |u| %>

		<%= render 'shared/error_messages', object: u.object %>
		
		<div id="edit-user-form">
			<div class="form-row">
				<%= u.label :name %>
				<%= u.text_field :name %>
			</div>
			<div class="form-row">
				<%= u.label :email %>
				<%= u.text_field :email %>
			</div>
			
			<div class="form-row">
				<%= u.label :password, "Lösenord" %>
				<%= u.password_field :password %>
			</div>
			
			<div class="form-row">
				<%= u.label :password_confirmation, "Bekräfta lösenord" %>
				<%= u.password_field :password_confirmation %>
			</div>
			
			<div class="form-row">
				<%= u.submit "Spara" %>
			</div>
		</div>
	<% end %>
</div>