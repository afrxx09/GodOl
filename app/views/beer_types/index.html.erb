<% provide(:title, 'Beer Types') %>
<h1><%= yield(:title) %></h1>

<div>
	<%= link_to "Ny Beer Type", new_beer_type_path %>
</div>

<div class="list">
	<div class="list-row">
		<div class="list-col">Id</div>
		<div class="list-col">Namn</div>
		<div class="list-col">Antal</div>
		<div class="list-col">Hantera</div>
	</div>
<% @beer_types.each do |bt| %>
	<div class="list-row">
		<div class="list-col"><%= bt.id %></div>
		<div class="list-col"><%= link_to bt.name, beer_type_path(bt) %></div>
		<div class="list-col"><%= bt.beers.length %></div>
		<div class="list-col">
			<%= link_to "Redigera", edit_beer_type_path(bt) %>
			<%= link_to "Ta bort", beer_type_path(bt) , method: :delete %>
		</div>
	</div>
<% end %>
</div>